#include <iostream>
using namespace std;

int main() {
	int num;
	cin >> num;

	for (int i = num-1; i >= 0; i--) {
		for (int j = num-1; j > i; j--) {
			cout << " ";
		}
		for (int k = 1; k <= 2 * i + 1; k++) {
			cout << "*";
		}
		cout << "\n";
	}
	
	for (int i = 1; i < num; i++) {
		for (int j = num-1; j > i; j--) {
			cout << " ";
		}
		for (int k = 1; k <= 2 * i + 1; k++) {
			cout << "*";
		}
		cout << "\n";
	}
	
	
	return 0;
}
