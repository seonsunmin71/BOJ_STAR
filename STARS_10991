#include<iostream>
using namespace std;



	int main(int argc, char* argv[])
	{
		int num;

		cin >> num;

		for (int i = 0; i < num; i++) {
			for (int j = num - 1; j > i; j--) {
				cout << " ";
			}
			cout << "*";

			for (int k = 0; k < i; k++) {
				cout << " *";
			}
			cout << "\n";
		}


	return 0; 
}

